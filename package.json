{
  "name": "indiepitcher",
  "version": "1.0.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": ["dist/**"],
  "keywords": [],
  "author": "IndiePitcher",
  "license": "MIT",
  "description": "Node.js library for IndiePitcher",
  "engines": {
    "node": ">=18"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "test": "jest",
    "test:watch": "jest --watch",
    "format:apply": "biome check --apply .",
    "format:check": "biome format .",
    "format": "biome format --write .",
    "lint": "biome check .",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/indiepitcher/indiepitcher-node.git"
  },
  "bugs": {
    "url": "https://github.com/indiepitcher/indiepitcher-node/issues"
  },
  "homepage": "https://github.com/indiepitcher/indiepitcher-node",
  "devDependencies": {
    "@biomejs/biome": "1.9.3",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.7.4",
    "dotenv": "^16.4.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsup": "^8.3.0",
    "typescript": "^5.6.3"
  }
}
